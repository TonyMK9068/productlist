- content_for :head do
  = stylesheet_link_tag 'friendships'

#row
  .add-friend
    = form_tag '/friendships', method: :post do
      .col-md-12
        %h3="Find friends by email:"
      %div
        .col-md-6
          = email_field_tag :email, '', class: 'form-control'
        = submit_tag 'Add friend', class: 'btn btn-small'

