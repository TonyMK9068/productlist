!!! 5
%html
  %head
    %title Giftshare
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "custom", :media => "all"
    = yield :head
    = csrf_meta_tags

    <script>(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-46903772-1', 'giftshare.io');
    ga('send', 'pageview');</script>

    

  %body
    .container-full-viewport
      %nav.navbar.special{:role => 'navigation'}
        .container
          .fb-share-button{ data: { href: "https://www.giftshare.io/", width: "50", type: "button"} }
          .navbar-left.navbar-brand= link_to "GiftShare", root_path
          %ul.nav.navbar-nav.pull-right
            - unless current_user
              %li= link_to 'Recent Activity', activities_path
              %li= link_to 'Top Products', products_path
              %li= link_to 'Sign Up', new_user_registration_path
              %li= link_to 'Sign In', new_user_session_path
            -else
              %li.active= link_to 'My Profile', user_path(current_user)
              %li= link_to 'Create List', new_list_path       
              %li= link_to 'Recent Activity', activities_path
              %li= link_to 'Top Products', products_path
              %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
                
        .container
      - if flash[:error]
        .alert.alert-danger
          = flash[:error]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
      - elsif flash[:info]
        .alert.alert-info
          = flash[:info]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
      - elsif flash[:alert]
        .alert.alert-info
          = flash[:alert]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
      - elsif flash[:notice]
        .alert.alert-success
          = flash[:notice]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
    .container
      = yield
      
    = javascript_include_tag "application"

