!!! 5
%html
  %head
    %title Giftshare
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "custom", :media => "all"
    = stylesheet_link_tag 'social-share-button', media: "all"
    = yield :head
    = csrf_meta_tags
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-46903772-3']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .container-full-viewport
      %nav.navbar.special{:role => 'navigation'}
        .container
          .fb-share-button{ data: { href: "https://www.giftshare.io/", width: "50", type: "button"} }
          .navbar-left.navbar-brand= link_to "GiftShare", root_path
          %ul.nav.navbar-nav.pull-right
            - unless current_user
              %li= link_to 'Top Products', products_path
              %li= link_to 'Sign Up', new_user_registration_path
              %li= link_to 'Sign In', new_user_session_path
            -else
              %li.active= link_to 'My Profile', user_path(current_user)
              %li= link_to 'Create List', new_list_path       
              %li= link_to 'Recent Activity', activities_path
              %li= link_to 'Top Products', products_path
              %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
                
      .container
        - if flash[:error]
          .alert.alert-danger
            = flash[:error]
            %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
        - elsif flash[:info]
          .alert.alert-info
            = flash[:info]
            %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
        - elsif flash[:alert]
          .alert.alert-info
            = flash[:alert]
            %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
        - elsif flash[:notice]
          .alert.alert-success
            = flash[:notice]
            %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"}} &times;
    .container
      = yield
      
    = javascript_include_tag "application"

