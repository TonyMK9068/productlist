!!! 5
%html
  %head
    %title= content_for?(:title) ?  content_for(:title) : 'Giftshare. Centralized wishlisting'
    = stylesheet_link_tag 'bootstrap.min', media: 'all'
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'social-share-button', media: 'all'
    = yield :head
    = csrf_meta_tags
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-46903772-3']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .container-full-viewport
      %nav.navbar.navbar-default.navbar-fixed-top.special{:role => 'navigation'}
        .container
          .navbar-header
            .navbar-brand= link_to 'GIFT SHARE', root_path
            %btn.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '#navbar-main' } } 
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          .navbar-collapse.collapse#navbar-main
            - unless current_user
              %ul.nav.navbar-nav
                %li= link_to 'Top Products', products_path
              %ul.nav.navbar-nav.navbar-right
                %li= link_to 'Sign Up', new_user_registration_path
                %li= link_to 'Sign In', new_user_session_path
            -else
              %ul.nav.navbar-nav
                %li.active= link_to 'My Profile', user_path(current_user)
                %li= link_to 'Create List', new_list_path       
                %li= link_to 'Recent Activity', activities_path
                %li= link_to 'Top Products', products_path
              %ul.nav.navbar-nav.navbar-right
                %li= link_to 'Sign Out', destroy_user_session_path, method: :delete

    .container#flash-messages
      - if flash[:error]
        .alert.alert-danger.alert-dismissable
          = flash[:error]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}} &times;
      - elsif flash[:info]
        .alert.alert-info.alert-dismissable
          = flash[:info]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}} &times;
      - elsif flash[:alert]
        .alert.alert-info.alert-dismissable
          = flash[:alert]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}} &times;
      - elsif flash[:notice]
        .alert.alert-success.alert-dismissable
          = flash[:notice]
          %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}} &times;

    .container#content-container
      = yield
    .container-full-viewport
      .container#footer
        .footer
          .row
            .col-lg-12
              .col-lg-2
                %span=link_to 'Privacy Policy', '/privacy'
              .col-lg-2
                %span= social_share_button_tag('Giftshare', url: 'https://www.giftshare.io')

    = javascript_include_tag "application"