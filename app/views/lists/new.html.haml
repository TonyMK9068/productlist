- content_for :title do
  = page_title("Giftshare Create a Wishlist")
- content_for :head do
  = stylesheet_link_tag 'pickadate.js/lib/themes/default'
  = stylesheet_link_tag 'pickadate.js/lib/themes/default.date.css'
%div
  %h1 Create A New Wish List

= render partial: "shared/error_messages", locals: {instance: @list}

.form-horizontal.col-sm-7.col-md-5{ :role => "form" }
  = form_for @list do |f|
    .form-group
      = f.label :title, class: "control-label"
      = f.text_field :title, class: "form-control", placeholder: "List Title"

    .form-group
      = f.label :event, 'Description', class: "control-label"
      = f.text_field :event, class: "form-control", placeholder: "Description"

    .datepicker-container.form-group
      = f.text_field :event_date, readyonly: true, placeholder: "Select a date", class: "datepicker"
    
    .form-group
      = f.label :privacy, 'Who would you like to share your list with?', class: "control-label"
      = f.collection_select :privacy, List.privacy_settings, :downcase, :capitalize, class: "form-control"

    .form-group
      = f.submit "Submit", class: "btn btn-default"
