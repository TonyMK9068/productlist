- content_for :title do
  = page_title("Giftshare - Hot Items. Etsy.com Amazon.com")
- content_for :head do
  = stylesheet_link_tag 'searches'

.container
  .row
    - Product.all.each do |item|
      .col-xs-12.col-sm-6.col-md-4.thumbnail-box
        .thumbnail
          .bounding-box-show
            = link_to(image_tag(item[:image_url]), item[:link], target: "_blank")

          .caption
            %h5= item[:name][0..38]
            %p Listing Number: #{item[:product_number]}
            %p Price: #{format_price(item[:price])}
            %p Category: #{item[:category]}

          .panel-footer
            %small Listed at: #{item[:store]}