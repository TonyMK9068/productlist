- content_for :head do
  = stylesheet_link_tag 'friendships'

- if activity.owner && (current_user != activity.owner)
  %li.media.activity.well
    .media-body
      %h4.media-heading #{link_to activity.owner.display_user_as('username'), user_path(activity.owner) } and #{link_to activity.recipient.display_user_as('username'), user_path(activity.recipient)} are now friends
    .col-md-12
      .pull-left
        .activity-icon.glyphicon.glyphicon-user 
      %strong= activity.created_at.localtime.strftime('at %I:%M%p %D')