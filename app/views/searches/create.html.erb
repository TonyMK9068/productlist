<% content_for :head do %>
  <%= stylesheet_link_tag 'searches' %>
<% end %>

<!-- Parsing Response -->
<!-- amazon request -->
<% @amazon_doc = Nokogiri::HTML(open(@search_request)) %>

<!-- styling page -->
<h6> Total Amazon Results <%= @amazon_doc.css('totalresults').text %></h6>

<div class="container">
<div class="row">
  <% @amazon_doc.css("item").each do |result| %>

  <div class="col-sm-4 thumbnail-box">
    <div class="thumbnail">
    <% img = result.at_css("mediumimage url").text %>

      <div class="thumbnail-image-container"><%= image_tag result.at_css("mediumimage url").text, class: "thumbnail-image" %></div>

        <div class="caption">
        <p><%= name = result.at_css("title").text %></p>
        <h6>ASIN: <%= asin = result.at_css("asin").text %></h6>
        <p> Price: <%= price = format_product_price(result.at_css("amount").text) %></p>
        <% category = result.at_css("productgroup").text %>
        <h6>Category: <%= result.at_css("productgroup").text  %></h6>
        <h6> <%= store = "Amazon.com" %>: <% link = result.at_css("detailpageurl").text %>
        <%= link_to "See More Info", result.at_css("detailpageurl").text %></h6
      
        <!-- Link to Add product -->
        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target= #<%= asin %> >
          List it! <i class="glyphicon glyphicon-star"></i>
        </button>
        <%= render partial: 'products/product_form', locals: { name: name, product_number: asin, link: link, image: img, category: category, price: price, store: store } %>
      </div>    
    </div><!-- thumbnail -->
  </div><!-- thumbnail-box -->
  <% end %>



</div>
</div>


