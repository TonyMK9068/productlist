.row
  .col-md-12
    %h1 #{(@user.first_name.capitalize + " " + @user.last_name.capitalize)|| @user.username || @user.email }'s Profile
    = link_to('Edit Profile Settings', edit_registration_path(current_user))

.row
  - if @user == current_user
    .friend-add-form.col-md-6
      = render partial: 'friendships/friendship_form', locals: {:user => current_user}

  - if @user.friends.count > 0
    .view-friend-list.col-md-4.col-md-offset-8
      = render partial: 'friendships/friend_list', locals: {:user => current_user }

  .col-md-7#profile-lists-table
    - if current_user == @user
      %p 
        You have #{pluralize(@lists.count, 'list')}

    - else 
      %p #{@user.email} has #{pluralize(@lists.count, 'list')}
    - if @user.lists.count > 0
      %table.table
        %tr
          %th Title
          %th Event
          %th Date

        = render @lists
      %table
