- content_for :head do 
  = stylesheet_link_tag 'welcome'
  = stylesheet_link_tag 'searches'
  
%header
  #social-buttons= social_share_button_tag('Giftshare.io', :'data-title' => 'Giftshare')
  .container
    .row
      .jumbotron.welcome
        %h1 Welcome to GiftShare
        %p All your wishlists from the world's top retailers in one place
        .btn-toolbar.col-sm-3{role: "toolbar"}
          %button.btn.btn-default.btn-lg.btn-block= link_to 'Sign Up', new_user_registration_path 
          %button.btn.btn-default.btn-lg.btn-block= link_to "Sign in with Facebook", '/users/auth/facebook'
          %button.btn.btn-default.btn-lg.btn-block= link_to 'Sign in with Twitter', '/users/auth/twitter'
          
.row-liquid#support-info.col-sm-12
  - Product.all.sample(6).each do |item|
    = render partial: 'popover', locals: { item: item }
